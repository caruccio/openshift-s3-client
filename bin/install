#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
	-v|--version)
		version="$2"
esac

client_result 'Your AWS S3 credentials environment variables:'
client_result ' '
client_result "OPENSHIFT_AWS_S3_ACCESS_KEY_ID:     $AWS_S3_ACCESS_KEY_ID"
client_result "OPENSHIFT_AWS_S3_SECRET_ACCESS_KEY: $AWS_S3_SECRET_ACCESS_KEY"
client_result "OPENSHIFT_AWS_S3_REGION:            $AWS_S3_REGION"
client_result "OPENSHIFT_AWS_S3_ENDPOINT:          $AWS_S3_ENDPOINT"
client_result "OPENSHIFT_AWS_S3_BUCKET_NAME:       $AWS_S3_BUCKET_NAME"
client_result "OPENSHIFT_AWS_S3_URL:               $AWS_S3_URL"
client_result ' '
client_result '!! WARNING !! WARNING !! WARNING !!'
client_result ' '
client_result 'If your delete this app, all files stored in this S3 bucket will be permanently lost.'
client_result ' '
